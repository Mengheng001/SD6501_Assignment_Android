<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:background="@color/teal_200"
    android:orientation="vertical"
    android:clipToPadding="false"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/message_fragment_displayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal">


    </LinearLayout>



    <TextView
        android:id="@+id/etsource1"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:text="Source1"
        android:textColor="@color/Button"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="420dp"/>

    <TextView
        android:id="@+id/etsource2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/Button"
        android:layout_gravity="center"
        android:text="Source2"
        android:layout_marginTop="-30dp"/>

    <TextView
        android:id="@+id/etsource3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Source3"
        android:textColor="@color/Button"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="-27dp"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-80dp"
        android:text="Here are some sources I used to develop this app"
        android:textColor="@color/black"
        android:textSize="16dp" />

    <ImageView
        android:layout_width="450dp"
        android:layout_height="350dp"
        android:layout_marginLeft="-20dp"
        android:layout_marginTop="-450dp"
        android:src="@drawable/einstein" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:text="Here! I designed Java at here!"
        android:textColor="@color/black"
        android:textSize="20dp" />


</LinearLayout>