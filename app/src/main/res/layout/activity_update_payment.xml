<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdatePaymentActivity"
    android:layout_gravity="center"
    android:padding="60dp">


    <TextView
        android:id="@+id/txtPaymentID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PaymentID"
        android:layout_marginTop="25dp"
        android:textSize="25dp"/>


    <TextView
        android:id="@+id/txtAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Amount"
        android:layout_below="@+id/txtPaymentID"
        android:layout_marginTop="25dp"/>


    <EditText
        android:id="@+id/etAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_below="@+id/txtAmount"/>


    <TextView
        android:id="@+id/txtDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click to pick a Date"
        android:layout_below="@+id/etAmount"
        android:layout_marginTop="25dp"/>


    <EditText
        android:id="@+id/etDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDate"/>

    <TextView
        android:id="@+id/txtTax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tax"
        android:layout_below="@+id/etDate"
        android:layout_marginTop="25dp"/>


    <EditText
        android:id="@+id/etTax"
        android:layout_width="match_parent"
        android:inputType="number"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTax"/>



    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etTax"
        android:text="Update"
        android:backgroundTint="@color/teal_200"
        android:layout_marginTop="25dp"
        android:onClick="updatePayment"/>


    <Button
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etTax"
        android:text="Delete"
        android:textColor="@color/white"
        android:backgroundTint="@color/black"
        android:layout_marginTop="25dp"
        android:layout_alignParentRight="true"
        android:onClick="deletePayment"/>





</RelativeLayout>